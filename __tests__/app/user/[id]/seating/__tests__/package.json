{
  "name": "seating-tests",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.0",
    "msw": "^2.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@tanstack/react-query": "^4.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/setup/jest.setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/../../../../../src/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js)",
      "**/*.(test|spec).(ts|tsx|js)"
    ],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
    "collectCoverageFrom": [
      "../**/*.{ts,tsx}",
      "!../**/*.d.ts",
      "!../**/*.stories.{ts,tsx}",
      "!../**/__tests__/**"
    ],
    "ts-jest": {
      "tsconfig": {
        "jsx": "react-jsx"
      }
    }
  }
} 